<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @shop.name %>
</p>

<p>
  <strong>Available on:</strong>
  <%= @shop.available_on %>
</p>

<p>
  <strong>Categories</strong>

  <ul>
    <% @shop.taxons.each do |taxon| -%>
      <h1><%= tag.li taxon.name %></h1>
      <% @shop.products.each do |product| -%>
          <% if product.taxons.ids.include?(taxon.id) -%>
            <%= render product %>
          <% end -%>
      <% end -%>
    <% end -%>
  </ul>
</p>
<%= link_to 'Back', shops_path %>
