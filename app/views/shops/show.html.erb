<%= link_to 'Retour', shops_path %>
<p>
  <strong>Name:</strong>
  <%= @shop.name %>
</p>

<p>
  <strong>Available on:</strong>
  <%= @shop.available_on %>
</p>

<p>
  <strong>Categories</strong>

  <ul>
    <% @shop.taxons.each do |taxon| -%>
      <h1><%= tag.li taxon.name %></h1>
        <div class="product-list">
          <% @shop.products.each do |product| -%>
              <% if product.taxons.ids.include?(taxon.id) -%>
                <%= render product %>
              <% end -%>
          <% end -%>
        </div>
    <% end -%>
  </ul>
</p>
